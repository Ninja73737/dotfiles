#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	alacritty

# ranger
alt + shift + Return
        alacritty -e fish -C 'ranger'

# program launcher
alt + space
	rofi -show drun -show-icons

# window switcher
alt + Tab
	rofi -show window

# make sxhkd reload its configuration files:
alt + shift + s
	pkill -USR1 -x sxhkd

#
# VM Stuff
#

# looking glass
# super + alt + l
# 	looking-glass-client -K 70

# switch desktop
# super + alt + m
# 	/usr/local/bin/switchmonitors

# switch audio
alt + shift + o
	/usr/local/bin/switchoutput


# switch phone
# super + alt + p
# 	/usr/local/bin/switchphone

#
# Audio Stuff
#

# up
XF86AudioRaiseVolume
	pulsemixer --change-volume +1

# down
XF86AudioLowerVolume
	pulsemixer --change-volume -1
#
# bspwm hotkeys
#

# quit/restart bspwm
alt + shift + {q,r}
	bspc {quit,wm -r}

# close and kill
alt + {_,shift + }w
	bspc node -{c,k}

#
# state/flags
#

# set the window state
alt + shift + {t,f}
	bspc node -t {tiled,floating}

######!!!!!!!!! pseudo_tiled is missing rn!!!

# set the node flags
# super + ctrl + {m,x,y,z}
# 	bspc node -g {marked,locked,sticky,private}

# quick balance
alt + shift + b
	bspc node @/ --balance

#
# focus/swap
#

# focus the node in the given direction
alt + shift + {_,super + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous desktop in the current monitor
# super + {button5,button4}
# 	bspc config pointer_follows_focus false && bspc desktop -f {prev,next}.local && sleep 0.1 && bspc config pointer_follows_focus true

# move and follow window to the next/previous desktop in the current monitor
# super + shift + {button5,button4}
# 	bspc node -d {prev,next}.local --follow

# focus the last node/desktop
#super + {grave,Tab}
#	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
alt + shift + {_,super + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

