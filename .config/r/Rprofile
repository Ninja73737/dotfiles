# Set CRAN Mirror:
local({
  r <- getOption("repos")
  r["CRAN"] <- "https://cloud.r-project.org/"
  options(repos = r)
})

# Use HTTPS
options(download.file.method = "libcurl")

# Set prompt
options(prompt = "r \x1b[32m>\x1b[0m ", continue = "    ")

# Return previous value as fraction
last_frac <- function() {
  library(MASS)
  return(as.fractions(.Last.value))
}
