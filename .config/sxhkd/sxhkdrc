# Programs

alt + Return
	alacritty
	# kitty

alt + shift + Return
        alacritty -e fish -C 'ranger'
        # kitty fish -C 'ranger'

alt + space
	rofi -show drun -show-icons -theme ~/.cache/wal/colors-rofi-dark.rasi
        # dmenu_run -fn "FiraCode Nerd Font-12" -x 16 -y 16 -w 2528

alt + slash
        thunar

alt + shift + c
        rofi -show calc -modi calc -no-show-match -no-sort -theme ~/.cache/wal/colors-rofi-dark.rasi
#         = --dmenu=dmenu -- -fn "FiraCode Nerd Font-12" -x 16 -y 16 -w 2528

alt + Tab
	rofi -show window -show-icons -theme ~/.cache/wal/colors-rofi-dark.rasi

alt + shift + s
	pkill -USR1 -x sxhkd

alt + shift + o
        $HOME/.scripts/switch_output_linux

alt + shift + {Down,Up}
        pulsemixer --change-volume {-,+}1

alt + shift + {Left,Right,space}
    playerctl {previous,next,play-pause}

{XF86AudioLowerVolume,XF86AudioRaiseVolume}
	pulsemixer --change-volume {-,+}1

alt + shift + f
        flameshot gui

alt + shift + w
        /home/mtoohey/.scripts/random_feh_bg nord-wallpapers

alt + shift + i
        imwheel -k -b 45

# bspwm

alt + shift + b
	bspc node @/ --balance

alt + shift + {_,super + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

alt + shift + {_,super + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

alt + shift + {p,u,g,n}
        brave {--profile-directory="Default",--profile-directory="Profile 2",--profile-directory="Profile 3",--profile-directory="Profile 4"}

alt + shift + {q,r}
	bspc {quit,wm -r}

alt + {w,q}
	bspc node -{c,k}

alt + shift + t
	bspc node -t ~tiled
