#     $HOME/.scripts/yt_mod_tools

# bspwm

alt + shift + b
    bspc node @/ --balance

alt + shift + {_,super + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

alt + shift + {_,super + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

alt + shift + {p,u,g,n}
    brave {--profile-directory="Default",--profile-directory="Profile 2",--profile-directory="Profile 3",--profile-directory="Profile 4"}

alt + shift + {q,r}
    bspc {quit,wm -r}

alt + {w,q}
    bspc node -{c,k}

alt + backslash
    bspc node focused.tiled -t pseudo_tiled || bspc node focused.pseudo_tiled -t floating || bspc node focused.floating -t fullscreen || bspc node focused.fullscreen -t tiled

alt + shift + backslash
    bspc node focused.tiled -t fullscreen || bspc node focused.fullscreen -t floating || bspc node focused.floating -t pseudo_tiled || bspc node focused.pseudo_tiled -t tiled

